<Window x:Class="Cryptocurrencies.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Cryptocurrencies.ViewModels"
        Title="SettingsView" Height="300" Width="400">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <CheckBox Content="Enable Dark Mode"
                      IsChecked="{Binding IsDarkModeEnabled}"/>
        </StackPanel>
    </Grid>
</Window>
