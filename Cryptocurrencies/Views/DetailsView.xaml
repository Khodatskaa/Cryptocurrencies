<Window x:Class="Cryptocurrencies.Views.DetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Cryptocurrencies.ViewModels"
        Title="DetailsView" Height="400" Width="600">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{Binding Cryptocurrency.Name}" FontSize="20" FontWeight="Bold" />
            <TextBlock Text="{Binding Cryptocurrency.PriceUsd, StringFormat='{}{0:C}'}" FontSize="16" />
            <TextBlock Text="{Binding Cryptocurrency.MarketCapUsd, StringFormat='Market Cap: {0:C}'}" />
            <TextBlock Text="{Binding Cryptocurrency.VolumeUsd24Hr, StringFormat='24h Volume: {0:C}'}" />
            <TextBlock Text="{Binding Cryptocurrency.ChangePercent24Hr, StringFormat='Change (24h): {0:F2}%'}" />
        </StackPanel>
    </Grid>
</Window>